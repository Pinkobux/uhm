"""
Password Strength Checker
-------------------------
This small program checks the strength of a password based on:
- Length
- Use of uppercase and lowercase letters
- Use of numbers
- Use of special characters

Usage:
- Run the script
- Enter a password when prompted
- The program will tell you if it's Weak, Medium, or Strong
"""

import re

def check_password(password):
    length = len(password)
    lower = re.search(r'[a-z]', password)
    upper = re.search(r'[A-Z]', password)
    digit = re.search(r'\d', password)
    special = re.search(r'[@$!%*?&#]', password)

    score = sum(bool(x) for x in [lower, upper, digit, special])

    if length >= 8 and score >= 3:
        return "Strong"
    elif length >= 6 and score >= 2:
        return "Medium"
    else:
        return "Weak"

# Main program
password = input("Enter a password to check: ")
strength = check_password(password)
print(f"Password strength: {strength}")
